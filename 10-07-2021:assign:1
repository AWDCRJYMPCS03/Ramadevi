import java.util.*;
class Main 
{
    public static void main(String args[])
    {
        Scanner sc=new Scanner(System.in);
        System.out.println("Enter a string");
        String str=sc.nextLine();
        int i;
        char[] s=str.toCharArray();
        for(i=s.length-1;i>=0;i--)
        System.out.print(s[i]);
    }
}
---------------
output:
enter a string:
ramadevi
ivedamar
